{% extends 'encuesta/index.html.twig' %}

{% block body_content %}
    {{ form_start(form) }}
        {{ form_row(form.text) }}
        {{ form_row(form.image) }}
        {{ form_row(form.encuesta) }}
        <ul id="respuestas-list"
            data-prototype="{{ form_widget(form.respuestas.vars.prototype)|e('html_attr') }}"
            data-widget-tags="{{ '<li></li>'|e }}"
            data-widget-counter="{{ form.children|length }}"
        >
        {% for respuestaField in form.respuestas %}
            <li>
                <label>Respuesta</label>{{ form_widget(respuestaField) }}
            </li>
        {% endfor %}
        </ul>
        <button type="button" onclick="addForm()">Otra respuesta</button>
        <button type="submit">Submit</button>
    {{ form_end(form) }}
{% endblock %}

{% block javaScript %}<script src="{{ asset('js/add-form.js') }}"></script>{% endblock %}