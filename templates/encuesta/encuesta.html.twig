{% extends 'encuesta/index.html.twig' %}

    {% block title %}
      IdentificaTest encuesta
    {% endblock title %}
    {% block stylesheets %}
        {{ parent() }}
    {% endblock %}

{% block body_tag %}data-spy="scroll" data-target=".navbar" data-offset="50" onload="cargar()" style="background-color: black"{% endblock %}
    {% block encuestas_active %}active{% endblock %}
    {% block body_content %}
      <!-- modal box to subscription-->

      <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog modal-lg">
          <div class="modal-content">
            <div class="modal-header justify-content-center text-center" style="background-color:  #EDDBF3;">
              <h4 class="modal-title">UNIRSE GRATIS AL SORTEO</h4>
            </div>
            <div class="modal-body justify-content-center text-center" style="background-color: #EDDBF3">
              <form action="">
                <div class="row justify-content-center text-center">
                  <div class="col-8">
                    <div class="form-group">
                      <label for="nombre">Nombre*:</label>
                      <input type="text" class="form-control input-class" id="userName" name="nombre" required>
                    </div>
                  </div>
                </div>
                <div class="row justify-content-center text-center">
                  <div class="col-8">
                    <div class="form-group">
                      <label for="email">Email*:</label>
                      <input type="email" class="form-control input-class" id="userEmail" name="email" required>
                    </div>
                  </div>
                </div>
                <div class="row justify-content-center text-center">
                  <div class="col-8">
                    <div class="form-group">
                      <label for="pwd">Contaseña*:</label>
                      <input type="password" class="form-control input-class" id="userPass" name="pwd" required>
                    </div>
                  </div>
                </div>
                <div class="form-check">
                  <label><input type="checkbox" name="validate" id="validate" required>Validar</label>
                </div>
              </form>
            </div>
            <div class="modal-footer justify-content-center" style="background-color:  #EDDBF3">
              <button type="button" class="btn btn-success" onclick="addUser()">Unirse</button>
              <button type="button" class="btn btn-warning" data-dismiss="modal">Cancelar</button>
            </div>
          </div>
        </div>
      </div>

      <!-- SECCIÓN PREGUNTAS/RESPUESTA -->

      <section id="top">
        <div class="container rounded" id="edge" style="background-color: #EDDBF3; padding-bottom:20px; padding-top: 70px; margin-top: 8%">
          <div class="row justify-content-center text-center" id="title">
          </div>
          <div class="row">
            <div class="col-sm-8 container-fluid justify-content-center text-center rounded" style="height: 850px; padding-top:50px; background-color: #EDDBF3; height: auto; width: auto;">
              <div class="row justify-content-center text-center" id="titulo_encuesta" style="padding-bottom:20px">
              </div>
              <div class="row justify-content-center" id="img_encuesta" style="padding-bottom:20px">
              </div>
              <div class="row justify-content-center text-center">
                <div class="col-sm-6" id="pregunta">
                </div>
              </div>
              <div class="row justify-content-center text-center" id="div_respuestas" style="padding-bottom:20px">
              </div>
            </div>
          </div>
        </div>
        <br><br>

        <div class="row justify-content-center">
          <div class="col-9 col-sm-4" style="height: 25px">
            <div class="progress" style="background-color: grey">
              <div class="progress-bar progress-bar-striped progress-bar-animated" id="PBar" role="progressbar" aria-valuenow="1" aria-valuemin="0" aria-valuemax="100"
                   style="width:1%; position: relative; background-color: green">
              </div>
            </div>
          </div>
        </div>
        <br><br>
        <!-- SECCIÓN COMENTARIOS -->

        <div class="container rounded" style="background-color: #EDDBF3; padding-bottom:20px; padding-top: 70px; margin-bottom: 4%">
          <div class="row">
            <div class="col-sm-8 container-fluid justify-content-center rounded" style=" background-color: #EDDBF3">
              <div class="col-sm-9">
                <h4>Deja un comentario:</h4>
                <form role="form">
                  <div class="form-group">
                    <textarea id="coment" class="form-control" rows="3" required></textarea>
                  </div>
                  <button type="button" class="btn btn-success" onclick="imprimirComentarios()">Enviar</button>
                </form>
                <br><br>
                <p id="pComment"> <span class="badge badge-dark" id="number"></span> COMENTARIOS:</p><br>
                <div class="col-sm-9" id="rowComment">
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    {% endblock %}
    {% block javaScript %}
<script src="{{ asset('js/main.js') }}"></script>
<script src="{{ asset('js/encuesta.js') }}"></script>
<script>
    var encuesta = {{ encuesta|raw }};
</script>
{% endblock %}
