<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}{% endblock %}</title>
        <link href="{{ asset('css/fontawesome/css/fontawesome-all.css') }}" rel="stylesheet" />
        <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet" />
        <link href="{{ asset('css/styles.css') }}" rel="stylesheet" />
        <script src="{{ asset('js/jquery.min.js') }}"></script>
        <script src="{{ asset('js/popper.min.js') }}"></script>
        <script src="{{ asset('js/bootstrap.min.js') }}"></script>
        <script>
            function hideModal (button){
                const flash = button.parentNode.parentNode;
                flash.classList.add('hide-flash');
            }
        </script>
        {% block stylesheets %}
            <link href="https://fonts.googleapis.com/css?family=Secular+One" rel="stylesheet" />
        {% endblock %}
    </head>
    <body {% block body_tag %}{% endblock %}>

        {% block body_nav %}
        {% endblock %}

        {% block body_content %}
        {% endblock %}

        {% block footer %}
        {% endblock %}

        {% block javaScript %}
        {% endblock %}

        {% block modal %}
            {% for message in app.flashes('notice') %}
                <div class="toast bg-light border-dark" role="alert" aria-live="assertive" aria-atomic="true">
                    <div class="toast-header">
                        <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" onclick="hideModal(this)" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="toast-body">
                        {{ message }}
                    </div>
                </div>
            {% endfor %}
        {% endblock %}

    </body>
</html>